				+productItemModified('img/categories/nuts/item7.png', 'Фундук бланшированный', 'big', 'nuts', 'nuts7', 'Фундук бланшированный', 'simple')
				+productItemModified('img/categories/nuts/item4.png', 'Фисташка зеленая', 'big', 'nuts', 'nuts4', 'Фисташка зеленая', 'simple')
				+productItemModified('img/categories/nuts/item5.png', 'Фисташка бланшированная', 'big', 'nuts', 'nuts5', 'Фисташка бланшированная', 'simple')
